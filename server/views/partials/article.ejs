<% articles.forEach(function(article) { %>
    <article class="post post-1">
        <header class="entry-header">
            <h1 class="entry-title">
                <a href="single.html"><%= article.title %></a>
            </h1>
            <div class="entry-meta">
                <span class="post-category"><a href="#"><%= article.category %></a></span>

                <span class="post-date"><a href="#"><time class="entry-date" datetime="2012-11-09T23:15:57+00:00"><%= article.date %></time></a></span>

                <span class="post-author"><a href="#"><%= article.author %></a></span>

                <span class="comments-link"><a href="#"><%= article.comments.length %> Comments</a></span>
            </div>
        </header>
        <div class="entry-content clearfix">
            <p><%= article.message %></p>
            <div class="read-more cl-effect-14">
                <a href="single.html" class="more-link">Continue reading <span class="meta-nav">â†’</span></a>
            </div>
        </div>
    </article>
<% }) %>  
  